	//Loading Smartnotifications Helper-Data
	$helperData = Mage::helper('smartnotifications/data');

	// Get the Status of the Scroller in helperData
	$scrollerActive = $helperData->scrollerStatus();
	
	// Get the Position of the Scroller in helperData
	$scrollerPosition = $helperData->scrollerPosition();
	
	// Get the Speed of the Scroller in helperData
	$scrollerSpeed =  $helperData->scrollerSpeed();
	
	// Get the Image of the  Scroller in helperData
	$scrollerImage = $helperData->scrollerImage();

	// Set the Scroll Image
	$scrollImageNumber = "scrollImg".$scrollerImage; 

	// Check the Scroll Image position
	if($scrollerPosition=="left")
		$Position = "scrollLeft";
	else
		$Position = "scrollRight";

	//Scroll Image Class Set
	$scrollClass = "class=\"scrollup ".$scrollImageNumber." ".$Position."\"";

	//Proceed if the Status is Enabled
	if($scrollerActive == 1):
	
	?>
		<a href="javascript:" id="smartnotificationsScrollup"  <?php echo $scrollClass; ?> >Scroll</a> 
		
	<script type="text/javascript">
		jQuery(document).ready(function () {
			//Get the Scroll Speed Value
			var speed = '<?php echo $scrollerSpeed ; ?>';
			var scrollSpeed = speed;
			jQuery(window).scroll(function () {
				if (jQuery(this).scrollTop() > 150) {
					jQuery('#smartnotificationsScrollup').show('slow');
				} else {
					jQuery('#smartnotificationsScrollup').hide('slow');
				}
			});

			jQuery('#smartnotificationsScrollup').click(function () {
				jQuery("html, body").animate({
					scrollTop: 0
				}, scrollSpeed);
				return false;
			});

		});
	</script>

	<?php endif;?>

