<config>
    <tabs>
        <trmtwiliosmsbridge_tab module="twiliosmsbridge">
            <label>TRM Marketing</label>
            <sort_order>100</sort_order>
        </trmtwiliosmsbridge_tab>
    </tabs>
    <sections>
        <trmtwiliosmsbridgeconfig module="twiliosmsbridge" translate="label">
            <label>SMS Order Notifications</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>trmtwiliosmsbridge_tab</tab>
            <groups>
                <trmtwiliosetupgroup translate="label">
                    <label>Twilio Account Configuration</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
					<enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
					<accountsid translate="label">
                            <label>Account SID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </accountsid>
					<authtoken translate="label">
                            <label>Auth Token</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </authtoken>
					<twiliophonenumber translate="label">
                            <label>Twilio Phone Number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </twiliophonenumber>			
					
					
					<!--triggerevent translate="label">
                            <label>Trigger Event</label>
                            <frontend_type>select</frontend_type>
                            <source_model>emailbump/eventselect</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </triggerevent>
						<frequency translate="label">
                            <label>Delay Duration</label>
