<config>
    <modules>
        <Belvg_Referralreward>
            <version>2.1.5</version>
            <update>13-07-2014</update>
            <desc>Stock Version</desc>
        </Belvg_Referralreward>
    </modules>
    <frontend>
        <secure_url>
            <referralreward>/referralreward/</referralreward>
        </secure_url>
        <routers>
            <referralreward>
                <use>standard</use>
                <args>
                    <module>Belvg_Referralreward</module>
                    <frontName>referralreward</frontName>
                </args>
            </referralreward>
        </routers>
        <layout>
            <updates>
                <referralreward>
                    <file>belvg/referralreward.xml</file>
                </referralreward>
            </updates>
        </layout>
        <translate>
            <modules>
                <Belvg_Referralreward>
                    <files>
                        <default>Belvg_Referralreward.csv</default>
                    </files>
                </Belvg_Referralreward>
            </modules>
        </translate>        
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <belvg_referralreward_onepage_controller_success>
                        <type>singleton</type>
                        <class>referralreward/observer_sales</class>
                        <method>checkoutSuccess</method>
                    </belvg_referralreward_onepage_controller_success>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <belvg_referralreward_multishipping_controller_success>
                        <type>singleton</type>
                        <class>referralreward/observer_sales</class>
                        <method>checkoutSuccess</method>
                    </belvg_referralreward_multishipping_controller_success>
                </observers>
            </checkout_multishipping_controller_success_action>
            <!--<sales_order_place_after>
                <observers>
                    <belvg_referralreward_ales_order_place_after>
                        <type>singleton</type>
                        <class>referralreward/observer_sales</class>
                        <method>checkoutSuccess</method>
                    </belvg_referralreward_ales_order_place_after>
                </observers>
            </sales_order_place_after>-->
            <sales_order_save_after>
                <observers>
                    <belvg_referralreward_sales_order_save_after>
                        <type>singleton</type>
                        <class>referralreward/observer_sales</class>
                        <method>orderSaveAfter</method>
                    </belvg_referralreward_sales_order_save_after>
                </observers>
            </sales_order_save_after>
            <controller_action_layout_load_before>
                <observers>
                    <belvg_referralreward_check_customer>
                        <type>singleton</type>
                        <class>referralreward/observer_other</class>
                        <method>checkCustomer</method>
                    </belvg_referralreward_check_customer>
                </observers>
            </controller_action_layout_load_before>
            <controller_action_predispatch_checkout_cart_index>
                <observers>
                    <belvg_referralreward_checkout_cart_index>
                        <type>singleton</type>
                        <class>referralreward/observer_other</class>
                        <method>beforeCart</method>
                    </belvg_referralreward_checkout_cart_index>
                </observers>
            </controller_action_predispatch_checkout_cart_index>
            <newsletter_subscriber_save_after>
                <observers>
                    <belvg_referralreward_newsletter_subscriber_save_after>
                        <type>singleton</type>
                        <class>referralreward/observer_newsletter</class>
                        <method>subscriberSaveAfter</method>
                    </belvg_referralreward_newsletter_subscriber_save_after>
                </observers>
            </newsletter_subscriber_save_after>
            <review_save_after>
                <observers>
                    <belvg_referralreward_review_save_after>
                        <type>singleton</type>
                        <class>referralreward/observer_review</class>
                        <method>reviewSaveAfter</method>
                    </belvg_referralreward_review_save_after>
                </observers>
            </review_save_after>
            <core_block_abstract_to_html_after>
                <observers>
                    <belvg_referralreward_block_to_html_after>
                        <type>singleton</type>
                        <class>referralreward/observer_other</class>
                        <method>pointsPaymentAdd</method>
                    </belvg_referralreward_block_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
            <controller_action_predispatch_checkout_onepage_savePayment>
                <observers>
                    <belvg_referralreward_save_payment>
                        <type>singleton</type>
                        <class>referralreward/observer_total</class>
                        <method>savePayment</method>
                    </belvg_referralreward_save_payment>
                </observers>
            </controller_action_predispatch_checkout_onepage_savePayment>
            <controller_action_predispatch_opc_json_savePayment>
                <observers>
                    <belvg_referralreward_save_payment>
                        <type>singleton</type>
                        <class>referralreward/observer_total</class>
                        <method>savePayment</method>
                    </belvg_referralreward_save_payment>
                </observers>
            </controller_action_predispatch_opc_json_savePayment>
        </events>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <referralreward before="Mage_Adminhtml">Belvg_Referralreward_Adminhtml</referralreward>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <Belvg_Referralreward>
                    <files>
                        <default>Belvg_Referralreward.csv</default>
                    </files>
                </Belvg_Referralreward>
            </modules>
        </translate>
        <layout>
            <updates>
                <referralreward>
                    <file>belvg/referralreward.xml</file>
                </referralreward>
            </updates>
        </layout>
        <events>
            <review_save_after>
                <observers>
                    <belvg_referralreward_adminhtml_review_save_after>
                        <type>singleton</type>
                        <class>referralreward/observer_review</class>
                        <method>reviewSaveAfter</method>
                    </belvg_referralreward_adminhtml_review_save_after>
                </observers>
            </review_save_after>
            <sales_order_save_after>
                <observers>
                    <belvg_referralreward_sales_order_save_after>
                        <type>singleton</type>
                        <class>referralreward/observer_sales</class>
                        <method>orderSaveAfter</method>
                    </belvg_referralreward_sales_order_save_after>
                </observers>
            </sales_order_save_after>
            <newsletter_subscriber_save_after>
                <observers>
                    <belvg_referralreward_newsletter_subscriber_save_after>
                        <type>singleton</type>
                        <class>referralreward/observer_newsletter</class>
                        <method>subscriberSaveAfter</method>
                    </belvg_referralreward_newsletter_subscriber_save_after>
                </observers>
            </newsletter_subscriber_save_after>
        </events>
    </adminhtml>

    <global>
        <resources>
            <referralreward_setup>
                <setup>
                    <module>Belvg_Referralreward</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </referralreward_setup>
            <referralreward_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </referralreward_write>
            <referralreward_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </referralreward_read>
        </resources>
        <blocks>
            <referralreward><class>Belvg_Referralreward_Block</class></referralreward>
        </blocks>
        <models>
            <referralreward>
                <class>Belvg_Referralreward_Model</class>
                <resourceModel>referralreward_mysql4</resourceModel>
            </referralreward>
            <referralreward_mysql4>
                <class>Belvg_Referralreward_Model_Mysql4</class>
                <entities>
                    <points>
                        <table>belvg_referralreward_points</table>
                    </points>
                    <points_log>
                        <table>belvg_referralreward_points_log</table>
                    </points_log>
                    <friends>
                        <table>belvg_referralreward_friends</table>
                    </friends>
                </entities>
            </referralreward_mysql4>
            <customer>
                <rewrite>
                    <customer>Belvg_Referralreward_Model_Rewrite_Customer</customer>
                </rewrite>
            </customer>
        </models>
        <helpers>
            <referralreward>
                <class>Belvg_Referralreward_Helper</class>
            </referralreward>
        </helpers>
        <rewrite>
            <referralreward_invitelink_index>
                <from><![CDATA[#^/invite/[0-9a-z]#]]></from>
                <to>/referralreward/invite/index/</to>
            </referralreward_invitelink_index>
        </rewrite>
        <template>
            <email>
                <referralreward_settings_email_template_invitation translate="label" module="referralreward">
                    <label>Referral Reward: Default Template Invitation</label>
                    <file>belvg/referralreward_invitation.html</file>
                    <type>html</type>
                </referralreward_settings_email_template_invitation>
                <referralreward_settings_email_template_notification translate="label" module="referralreward">
                    <label>Referral Reward: Default Template Notification</label>
                    <file>belvg/referralreward_notification.html</file>
                    <type>html</type>
                </referralreward_settings_email_template_notification>
            </email>
        </template>
        <sales>
            <quote>
                <totals>
                    <referralreward>
                        <class>referralreward/total_quote</class>
                        <after>subtotal</after>
                        <before>tax</before>
                    </referralreward>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <referralreward>
                        <class>referralreward/total_invoice</class>
                        <after>subtotal</after>
                        <before>tax</before>
                    </referralreward>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <referralreward>
                        <class>referralreward/total_creditmemo</class>
                        <after>subtotal</after>
                        <before>tax</before>
                    </referralreward>
                </totals>
            </order_creditmemo>
        </sales>
        <fieldsets>
            <sales_convert_quote_address>
                <referralreward_amount>
                    <to_order>*</to_order>
                </referralreward_amount>
                <base_referralreward_amount>
                    <to_order>*</to_order>
                </base_referralreward_amount>
            </sales_convert_quote_address>
        </fieldsets>
        <events>
        	<paypal_prepare_line_items>
        		<observers>
        			<paypal_prepare_line_items>
        				<class>referralreward/observer_total</class>
                        <method>updatePaypalTotal</method>
        			</paypal_prepare_line_items>
        		</observers>
        	</paypal_prepare_line_items>
           	<sales_order_invoice_save_after>
                <observers>
                    <sales_order_invoice_save_after>
                        <class>referralreward/observer_total</class>
                        <method>invoiceSaveAfter</method>
                    </sales_order_invoice_save_after>
                </observers>
            </sales_order_invoice_save_after>
            <sales_order_creditmemo_save_after>
               <observers>
                   <sales_order_creditmemo_save_after>
                       <class>referralreward/observer_total</class>
                       <method>creditmemoSaveAfter</method>
                   </sales_order_creditmemo_save_after>
               </observers>
           </sales_order_creditmemo_save_after>
        </events>
        <pdf>
            <totals>
                <referralreward translate="title">
                    <title>Points Discaunt</title>
                    <source_field>referralreward_amount</source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>650</sort_order>
                    <amount_prefix>-</amount_prefix>
                </referralreward>
            </totals>
        </pdf>
    </global>
    <default>
        <sales>
            <totals_sort>
                <referralreward>15</referralreward>
            </totals_sort>
        </sales>
        <referralreward>
            <settings>
                <pointcost>1</pointcost>
                <individual_registration_page>1</individual_registration_page>
                <point_lifetime_enabled>0</point_lifetime_enabled>
                <point_lifetime>30</point_lifetime>
                <transfer>1</transfer>
                <discard_points>1</discard_points>
                <use_coupon>1</use_coupon>
                <total_label>Points Discount</total_label>
                <cart_or_onepage>cart</cart_or_onepage>
                <slider_use>1</slider_use>
            </settings>
            <points>
                <registration>0</registration>
                <inviter>0</inviter>
                <invitee>0</invitee>
                <minorder>0</minorder>
                <invitation_order_status>complete</invitation_order_status>
                <order_cancel>1</order_cancel>
                <to_all>0</to_all>
                <newsletter>0</newsletter>
                <newsletter_remove_points>1</newsletter_remove_points>
                <review>0</review>
            </points>
        </referralreward>
    </default>
</config>