<?xml version="1.0"?>
<config>
	  <tabs>
		<ds_resposiveslider translate="label" module="resposiveslider">
            <label>DS Responsive Slider</label>
            <sort_order>0</sort_order>
        </ds_resposiveslider>
	  </tabs>
	  <sections>
		<ds_resposiveslidersec  translate="label" module="resposiveslider">                    
		<label>Manage Responsive Slider</label>
		<tab>ds_resposiveslider</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
				      <manage_settings translate="label"> 
					  <label>Manage Settings</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>0</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <enable_jquery translate="label">
                            <label>Enable Jquery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Adds Jquery If Set To "Yes"</comment>
                          </enable_jquery>
                          <mode translate="label">
                            <label>Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>resposiveslider/system_config_source_Mode</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Type Of Transition Between Slides</comment>
                          </mode>
                          <speed translate="label">
                            <label>Speed</label>
							<frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Slide transition duration (in ms)</comment>
                          </speed>
                          <autocontrols translate="label">
                            <label>Auto Controls</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If Set To Yes, "Start" / "Stop" controls Will Be Added</comment>
                          </autocontrols>
                          <auto translate="label">
                            <label>Auto Transition</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Slides Will Automatically Transition If Set To "Yes"</comment>
                          </auto>
                          <pager translate="label">
                            <label>Pager</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If Set To Yes, A Pager Will Be Added.</comment>
                          </pager>
                          <pagertype translate="label">
                            <label>Pager Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>resposiveslider/system_config_source_Pager</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If 'full', a pager link will be generated for each slide. If 'short', a x / y pager will be used (ex. 1 / 5)</comment>
                          </pagertype>
                          <pagershortseparator translate="label">
                            <label>Pager Short Separator</label>
							<frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If pagerType: 'short', Pager Will Use This Value As The Separating Character (Like "-", "/")</comment>
                          </pagershortseparator>
                          <controls translate="label">
                            <label>Controls</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If tSet To Yes, "Next" / "Prev" Controls Will Be Added</comment>
                          </controls>
                          <autohover translate="label">
                            <label>Auto Hover</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Auto show will pause when mouse hovers over slider</comment>
                          </autohover>
					   </fields>
					   </manage_settings>
					</groups>
		</ds_resposiveslidersec>
	  </sections>
</config>
